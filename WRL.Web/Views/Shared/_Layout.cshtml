            <li class="active"><a data-ui-href="apartments">Квартиры</a></li>
            <li><a data-ui-href="about">О Нас</a></li>
            <li><a data-ui-href="contacts">Контакты</a></li>
        </ul>
    </div>
</nav>
<div @*data-ng-controller=""*@>
